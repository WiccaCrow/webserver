{
    "servers": {
        "http": {
            "port": 8080,
            "server_name": "localhost",
            "error_pages": {
                "404": "./pages/404.html",
                "400": "./pages/400.html"
            },
            "methods-allowed": [ "GET", "POST" ],
            "post_max_body": 100,
            "autoindex": true,
            "index": [ "index.html" ],
            "locations": {
                "/about": {
                    "root": "./pages",
                    "autoindex": false,
                    "index": [ "index.html" ],
                    "post_max_body": 200,
                    "methods-allowed": [ "GET", "POST" ]                 
                },
                "/feedback": {
                    "autoindex": false,
                    "index": [ "index.html", "index.php" ],
                    "methods-allowed": [ "GET" ],
                    "post_max_body": 300
                }
            }
        }
    }
}
