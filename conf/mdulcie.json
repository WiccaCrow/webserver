{
    "settings": {
        "max_wait_conn": 128,
        "blind_proxy": true,
        "max_requests": 100,
        "max_client_timeout": 250,
        "max_gateway_timeout": 100,
        "session_lifetime": 86400,
        "max_uri_length": 1024,
        "chunk_size": "10 MiB",
        "max_header_field_length": 2048,
        "worker_timeout": 10000,
        "workers": 3,
        "max_reg_file_size": "400 MiB",
        "max_range_size": "2 MiB",
        "cookie_http_only": true,
        "max_reg_upload_size": "10B"
    },
    "servers": {
        "http": {
            "listen": "127.0.0.1:8080",
            "server_names": [ "localhost" ],
            "proxy_domains": [ 
                    "www.google.com", 
                    "www.vk.com"
            ],
            "locations": {
                "/": {
                    "proxy_pass": "",
                    "root": "~",
                    "error_pages": {
                        "404": "./pages/error_pages/404.html",
                        "400": "./pages/error_pages/400.html"
                    },
                    "cgi": {
                        ".py": "/usr/bin/python3.9"
                    },
                    "methods_allowed": [ "GET", "POST" ],
                    "post_max_body": "1GiB",
                    "autoindex": true,
                    "index": [ "index.html" ]
                },
                "/welcome": {
                    "alias": "./pages/welcome",
                    "cgi": {
                        ".py": "/usr/bin/python3"
                    },
                    "index": [ "index.html" ],
                    "methods_allowed": [ "GET", "POST" ] 
                },
                "/ss": {
                    "alias": "/home/user/Desktop/github/",
                    "autoindex": true,
                    "index": [ "index.html" ],
                    "post_max_body": "200B",
                    "methods_allowed": [ "GET", "POST" ]
                },
                "/pages": {
                    "alias": "/home/user/Desktop/github/webserver/pages/",
                    "autoindex": true,
                    "index": [ "index.html" ],
                    "post_max_body": "200B",
                    "methods_allowed": [ "GET", "POST" ],
                    "cgi": {
                        ".py": "/usr/bin/python3"
                    }
                },
                "/about": {
                    "alias": "/home/user/Desktop/github/webserver/pages/site",
                    "autoindex": true,
                    "index": [ "index.html" ],
                    "post_max_body": "200B",
                    "methods_allowed": [ "GET", "POST" ]                 
                },
                "/feedback": {
                    "cgi": {
                        ".py": "/usr/bin/python3.9"
                    },
                    "autoindex": false,
                    "index": [ "index.html", "index.php" ],
                    "methods_allowed": [ "GET" ],
                    "post_max_body": "300B"
                },
                "/put": {
                    "alias": "/home/user/Desktop/github/webserver/put",
                    "methods_allowed": [ "PUT", "DELETE", "POST" ],
                    "post_max_body": "24GB"
                },
                "/delete": {
                    "alias": "/home/user/Desktop/github/webserver/put",
                    "methods_allowed": [ "DELETE" ]
                }
            }
        },
        "http2": {
            "listen": "127.0.0.2:8080",
            "server_names": [ "local" ],
            "locations": {
                "/": {
                    "methods_allowed": [ "GET" ],
                    "root": "/home/user/Desktop/github/webserver/",
                    "index": [ "index.html" ]
                }
            }
        },
        "http3": {
            "listen": "127.0.0.1:8080",
            "server_names": [ "webserv.com" ],
            "locations": {
                "/": {
                    "methods_allowed": [ "GET" ],
                    "root": "/home/user/Desktop/github/webserver/pages/site"
                },
                "/proxy": {
                    "alias": "/",
                    "proxy_pass": "www.google.com:80"
                }
            }
        }
    }
}