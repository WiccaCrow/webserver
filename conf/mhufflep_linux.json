{
	"settings": {
        "max_wait_conn": 128,
        "blind_proxy": true,
        "max_requests": 100,
        "max_client_timeout": 25,
        "max_gateway_timeout": 100,
        "session_lifetime": 86400,
        "max_uri_length": 1024,
        "chunk_size": "10 MiB",
        "max_header_field_length": 2048,
        "worker_timeout": 10000,
        "workers": 3,
        "max_reg_file_size": "4 MiB",
        "max_range_size": "2 MiB",
        "cookie_http_only": true
    },
    "servers": {
        "http": {
            "listen": "127.0.0.1:8080",
            "server_names": [ "localhost" ],
            "error_pages": {
                "400": "./pages/error_pages/400.html",
                "403": "./pages/error_pages/403.html",
                "404": "./pages/error_pages/404.html",
                "405": "./pages/error_pages/405.html",
                "408": "./pages/error_pages/408.html",
                "411": "./pages/error_pages/411.html",
                "413": "./pages/error_pages/413.html",
                "414": "./pages/error_pages/414.html",
                "415": "./pages/error_pages/415.html",
                "500": "./pages/error_pages/500.html",
                "501": "./pages/error_pages/501.html",
                "502": "./pages/error_pages/502.html",
                "504": "./pages/error_pages/504.html",
                "505": "./pages/error_pages/505.html"
            },
            "cgi": {
                ".pl": "/usr/bin/perl",
                ".py": "/usr/bin/python3.8",
                ".js": "/usr/local/bin/node",
                ".cgi": ""
            },
            "methods_allowed": [ "GET", "PUT", "POST" ],
            "post_max_body": "100B",
            "autoindex": true,
            "index": [ "index.html" ],
            "locations": {
				"/welcome": {
                    "alias": "./pages/site/welcome",
                    "cgi": {
                        ".py": "/usr/bin/python3"
                    },
                    "index": [ "index.html" ],
                    "methods_allowed": [ "GET", "POST" ] 
                },
                "/try.about": {
                    "alias": "/home/mhufflep/Downloads",
                    "autoindex": true,
                    "cgi": {
                        ".js": "/usr/local/bin/node",
                        ".py": "/usr/bin/python3.8"
                    },
                    "index": [ "index.html" ],
                    "post_max_body": "100B",
                    "methods_allowed": [ "GET", "POST" ]                 
                },
                "/feedback": {
                    "alias": "./pages/site",
                    "cgi": {
                        ".py": "/usr/bin/python3.8",
                        ".js": "/usr/local/bin/node"
                    },
                    "auth_basic": {
                        "realm": "eternity",
                        "user_file": ".htpasswd"
                    },
                    "autoindex": false,
                    "index": [ "index.html", "index.php" ],
                    "methods_allowed": [ "DELETE" ],
                    "post_max_body": "100B"
                }
            }
        },
        "http2": {
            "listen": "172.20.10.3:8080",
            "server_names": [ "webserv.com" ],
            "methods_allowed": [ "GET", "PUT", "POST" ],
            "post_max_body": "100B",
            "autoindex": true,
            "index": [ "index.html" ],
            "locations": {
                "/try.about": {
                    "alias": "/home/mhufflep/Downloads",
                    "autoindex": true,
                    "index": [ "index.html" ],
                    "post_max_body": "100B",
                    "methods_allowed": [ "GET", "POST" ]                 
                },
                "/feedback": {
                    "alias": "/home/mhufflep/",
                    "auth_basic": {
                        "realm": "eternity",
                        "user_file": ".htpasswd"
                    },
                    "autoindex": false,
                    "index": [ "index.html", "index.php" ],
                    "methods_allowed": [ "DELETE" ],
                    "post_max_body": "100B"
                }
            }
        }
    }
}
