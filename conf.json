{
    "servers": {
        "http": {
            "port": 8080,
            "server_name": "localhost",
            "error_pages": {
                "404": "./pages/404.html",
                "400": "./pages/400.html"
            },
            "root": "/var/www",
            "CGI": {
                ".py": "/etc/bin/python",
                ".php": "/etc/bin/phpfpm"
            },
            "methods-allowed": [ "GET", "POST" ],
            "post_max_body": 100,
            "autoindex": true,
            "index": [ "index.html" ],
            "locations": {
                "/about": {
                    "root": "/var/123/",
                    "CGI": {
                        ".js": "/etc/bin/node"
                    },
                    "autoindex": true,
                    "index": [ "index.php" ],
                    "post_max_body": 200,
                    "methods-allowed": [ "GET", "POST" ]                 
                },
                "/feedback": {
                    "root": "/var/456/",
                    "CGI": {
                        ".js": "/etc/bin/node"
                    },
                    "autoindex": false,
                    "index": [ "index.html", "index.php" ],
                    "methods-allowed": [ "GET" ],
                    "post_max_body": 300
                }
            }
        }
    }
}